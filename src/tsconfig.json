{
  "compilerOptions": {
    "baseUrl": "",
    "declaration": false,
    "downlevelIteration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es2016", "dom"],
    "mapRoot": "./",
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "../dist/out-tsc",
    //find a way to separate the mapping from the source code to reduce the vendor.js size in Audit section of dev tools
    "sourceMap": true,
    "target": "es2015",
    "typeRoots": ["../node_modules/@types"],
    "importHelpers": true
  }
,
  "files": [
    "main.ts",
    "polyfills.ts"
  ],
  "include": [
    "src/**/*.d.ts"
  ]
}
